# Required Environment Variables (at least one platform token required)
API_KEY=your_intelligence_io_api_key_here

# Platform Tokens (provide one or both)
DISCORD_TOKEN=your_discord_bot_token_here
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Optional Configuration (defaults provided)
API_BASE_URL=https://api.intelligence.io.solutions/api/v1
MODEL_NAME=meta-llama/Llama-3.3-70B-Instruct

# Bot Configuration (optional)
MAX_CONTEXT_MESSAGES=20
MESSAGE_BATCH_SIZE=5
PROCESSING_TIMEOUT=25.0
RATE_LIMIT_DELAY=0.5
MAX_RESPONSE_LENGTH=2000
CONTEXT_CLEANUP_INTERVAL=300